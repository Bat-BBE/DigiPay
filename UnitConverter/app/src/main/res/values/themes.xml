<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UnitConverter" parent="android:Theme.Material.Light.NoActionBar" />

<!-- Base Theme -->
<style name="MyAppTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color -->
    <item name="colorPrimary">@color/primary_blue</item>
    <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color -->
    <item name="colorSecondary">@color/primary_blue_light</item>
    <item name="colorSecondaryVariant">@color/primary_blue</item>
    <item name="colorOnSecondary">@color/white</item>

    <!-- Background colors -->
    <item name="android:colorBackground">@color/background_dark</item>
    <item name="colorSurface">@color/card_background</item>
    <item name="colorOnBackground">@color/text_primary</item>
    <item name="colorOnSurface">@color/text_primary</item>

    <!-- Status bar -->
    <item name="android:statusBarColor">@color/status_bar</item>
    <item name="android:windowLightStatusBar">false</item>

    <!-- Navigation bar -->
    <item name="android:navigationBarColor">@color/background_dark</item>

    <!-- Window properties -->
    <item name="android:windowBackground">@color/background_dark</item>
    <item name="android:windowContentTransitions">true</item>

    <!-- Text colors -->
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:textColorHint">@color/text_hint</item>

    <!-- Button styles -->
    <item name="materialButtonStyle">@style/CustomButton</item>

    <!-- Card styles -->
    <item name="materialCardViewStyle">@style/CustomCard</item>
</style>

<!-- Custom Button Style -->
<style name="CustomButton" parent="Widget.Material3.Button">
    <item name="android:background">@color/primary_blue</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="cornerRadius">24dp</item>
    <item name="android:elevation">0dp</item>
    <item name="android:stateListAnimator">@null</item>
</style>

<!-- Custom Card Style -->
<style name="CustomCard" parent="Widget.Material3.CardView.Elevated">
    <item name="cardBackgroundColor">@color/card_background</item>
    <item name="cardCornerRadius">16dp</item>
    <item name="cardElevation">0dp</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
</style>

<!-- Toolbar Style -->
<style name="CustomToolbar" parent="Widget.Material3.Toolbar">
    <item name="android:background">@color/background_dark</item>
    <item name="titleTextColor">@color/primary_blue</item>
    <item name="navigationIconTint">@color/text_primary</item>
</style>

<!-- EditText Style -->
<style name="CustomEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textColorHint">@color/text_secondary</item>
    <item name="android:background">@color/transparent</item>
</style>

<!-- Spinner Style -->
<style name="CustomSpinner" parent="Widget.Material3.MaterialTimePicker.Display">
    <item name="android:background">@color/transparent</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:popupBackground">@color/card_background</item>
</style>

<!-- Dark Theme -->
<style name="AppTheme.Dark" parent="MyAppTheme">
    <item name="android:forceDarkAllowed">false</item>
</style>

</resources>